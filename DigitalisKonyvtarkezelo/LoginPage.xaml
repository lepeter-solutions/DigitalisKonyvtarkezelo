<Page x:Class="DigitalisKonyvtarkezelo.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LoginPage">
    <Grid>
        <TextBlock Text="Username:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,30,0,0"/>
        <TextBox Name="UsernameTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="120,30,0,0"/>

        <TextBlock Text="Password:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,80,0,0"/>
        <PasswordBox Name="PasswordBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="120,80,0,0"/>

        <Button Content="Login" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Margin="120,130,0,0" Click="LoginButton_Click"/>
        <Button Content="Regisztráció" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Margin="230,130,0,0" Click="RegisterButton_Click"/>
    </Grid>
</Page>