<Page x:Class="DigitalisKonyvtarkezelo.RegisztraciosOldal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegisztraciosOldal">
    <Grid>
        <TextBlock Text="Username:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,30,0,0"/>
        <TextBox Name="UsernameTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="120,30,0,0"/>

        <TextBlock Text="Email:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,80,0,0"/>
        <TextBox Name="EmailTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="120,80,0,0"/>

        <TextBlock Text="Password:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,130,0,0"/>
        <PasswordBox Name="PasswordBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="120,130,0,0"/>

        <Button Content="Register" VerticalAlignment="Top" HorizontalAlignment="Left" Width="95" Margin="120,175,0,0" Click="RegisterButton_Click"/>
        <Button Content="Back" HorizontalAlignment="Left" Width="94" Margin="226,175,0,15" Click="BackButton_Click"/>
    </Grid>
</Page>